{
    "info": {
      "name": "User Management API",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Login",
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\"email\": \"test@example.com\", \"password\": \"password\"}"
          },
          "url": {
            "raw": "http://localhost:8080/login",
            "protocol": "http",
            "host": [
              "localhost"
            ],
            "port": "8080",
            "path": [
              "login"
            ]
          }
        },
        "event": [
          {
            "listen": "test",
            "script": {
              "exec": [
                "var jsonData = pm.response.json();",
                "pm.environment.set(\"token\", jsonData.token);"
              ],
              "type": "text/javascript"
            }
          }
        ]
      },
      {
        "name": "Create User",
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            },
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\"username\": \"newuser\", \"email\": \"newuser@example.com\", \"password\": \"password123\", \"role\": \"user\"}"
          },
          "url": {
            "raw": "http://localhost:8080/users",
            "protocol": "http",
            "host": [
              "localhost"
            ],
            "port": "8080",
            "path": [
              "users"
            ]
          }
        }
      },
      {
        "name": "Get User",
        "request": {
          "method": "GET",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ],
          "url": {
            "raw": "http://localhost:8080/users/1",
            "protocol": "http",
            "host": [
              "localhost"
            ],
            "port": "8080",
            "path": [
              "users",
              "1"
            ]
          }
        }
      },
      {
        "name": "Update User",
        "request": {
          "method": "PUT",
          "header": [
            {
              "key": "Content-Type",
              "value": "application/json"
            },
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\"username\": \"updateduser\", \"email\": \"updateduser@example.com\", \"role\": \"manager\"}"
          },
          "url": {
            "raw": "http://localhost:8080/users/1",
            "protocol": "http",
            "host": [
              "localhost"
            ],
            "port": "8080",
            "path": [
              "users",
              "1"
            ]
          }
        }
      },
      {
        "name": "Delete User",
        "request": {
          "method": "DELETE",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}"
            }
          ],
          "url": {
            "raw": "http://localhost:8080/users/1",
            "protocol": "http",
            "host": [
              "localhost"
            ],
            "port": "8080",
            "path": [
              "users",
              "1"
            ]
          }
        }
      }
    ]
  }
  