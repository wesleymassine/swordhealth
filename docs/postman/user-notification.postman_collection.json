{
    "info": {
      "name": "User Notification Service",
      "description": "API collection for User Notification Service",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Get Latest Notifications",
        "request": {
          "method": "GET",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}",
              "type": "text"
            }
          ],
          "url": {
            "raw": "{{base_url}}/notifications",
            "host": [
              "{{base_url}}"
            ],
            "path": [
              "notifications"
            ]
          }
        },
        "response": []
      },
      {
        "name": "Notify Manager",
        "request": {
          "method": "POST",
          "header": [
            {
              "key": "Authorization",
              "value": "Bearer {{token}}",
              "type": "text"
            },
            {
              "key": "Content-Type",
              "value": "application/json",
              "type": "text"
            }
          ],
          "body": {
            "mode": "raw",
            "raw": "{\n\t\"task_id\": 123,\n\t\"notify_email\": true,\n\t\"notify_push\": false\n}"
          },
          "url": {
            "raw": "{{base_url}}/notify",
            "host": [
              "{{base_url}}"
            ],
            "path": [
              "notify"
            ]
          }
        },
        "response": []
      }
    ],
    "event": [
      {
        "listen": "prerequest",
        "script": {
          "exec": [
            ""
          ]
        }
      },
      {
        "listen": "test",
        "script": {
          "exec": [
            ""
          ]
        }
      }
    ],
    "variable": [
      {
        "key": "base_url",
        "value": "http://localhost:8080",
        "type": "string"
      },
      {
        "key": "token",
        "value": "<your_auth_token>",
        "type": "string"
      }
    ]
  }
  